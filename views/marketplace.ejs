<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<%- include('common/styles') %>
		<title> <%= title %> </title>
	</head>

	<body>
		<%- include('common/header') %>
		<div class="row">
			<div class="col-md-3"> <%- include('common/sidebar') %> <%- include('common/off-canvas_sidebar') %></div>
			<div class="col-md-9">
				<main>
					<!-- Contenido principal -->
					<div class="title-container container-fluid d-flex p-3">
						<h5>Servicios en venta</h5>
					</div>
					<nav class="navbar navbar-expand-lg navbar-light bg-light">
						<div class="container-fluid">
							<button
								class="navbar-toggler"
								type="button"
								data-bs-toggle="collapse"
								data-bs-target="#navbarSupportedContent"
								aria-controls="navbarSupportedContent"
								aria-expanded="false"
								aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>
							<div class="z-index collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav me-auto mb-2 mb-lg-0">
									<li class="nav-item dropdown">
										<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											Opciones
										</a>
										<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
											<li><a class="dropdown-item" href="#">Crear servicio</a></li>
											<li><a class="dropdown-item" href="#">Another action</a></li>
											<li>
												<hr class="dropdown-divider" />
											</li>
											<li><a class="dropdown-item" href="#">Something else here</a></li>
										</ul>
									</li>
								</ul>
								<form class="d-flex">
									<input class="form-control me-2" type="search" placeholder="Ingresa servicio" aria-label="Search" />
									<button class="btn btn-outline-success" type="submit">Buscar</button>
								</form>
							</div>
						</div>
					</nav>
					<!-- this row contains all the products -->
					<div class="row" id="row-products">
						<div class="col-sm-4">
							<div class="card">
								<div class="card-body">
									<p class="card-text">Publica un servicio</p>
								</div>
							</div>
						</div>

						<!-- generate all the cards -->
						<% for(let i=0; i<products.length; i++) {%>
						<div class="col-sm-4">
							<div class="card">
								<div class="card-name">
									<p class="card-text"><%= products[i].name %></p>
								</div>
								<div class="card-body">
									<p class="card-text"><%= products[i].description %></p>
								</div>
							</div>
						</div>
						<% } %>
				</main>
			</div>
		</div>

		<%- include('common/footer') %> <%- include('common/scripts.ejs') %>
	</body>
</html>
